<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ecust.mapper.ApplicationMapper">
	
	<resultMap type="application" id="appMap">
	<result property="projectId" column="projectId"/>
		<association property="project" select="com.ecust.mapper.ProjectMapper.selectById" column="project_id">
		</association>
	</resultMap>
	
	<select id="selectByStudentId" resultMap="appMap">
		select project_id,reason,DATE_FORMAT(apply_time,"%Y-%m-%d %T"),apply_status,remark from application where student_id=#{id}
	</select>
</mapper>